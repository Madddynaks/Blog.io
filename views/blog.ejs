<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-4 border rounded mb-5">
      <h1 class="text-center"><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        class="mt-4 d-block mx-auto"
        width="700px"
        alt=""
      />
      <pre class="mt-4" style="white-space: pre-wrap; word-wrap: break-word">
<%= blog.body %></pre
      >
      <div>
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" />
        <h3>-<%= blog.createdBy.fullName %></h3>
      </div>
    </div>

    <div class="container mt-4 mb-5">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            id="content"
            aria-describedby="emailHelp"
            name="content"
            placeholder="Enter your comment..."
          />
        </div>

        <button class="btn btn-primary">Add</button>
      </form>
      <% } %> <% comments.forEach(comment => { %>
      <div class="mt-3">
        <h5>- <%= comment.createdBy.fullName %> :</h5>
        <p class=""> <%= comment.content %> </p>
      </div>
      <% }) %>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
